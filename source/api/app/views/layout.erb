<!DOCTYPE html>
<html lang="en">
<head>


  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
  <style type="text/css">
    html { height: 100% }
    body { height: 100%; margin: 0; padding: 0 }
    #map-canvas { height: 100% }
  </style>
  <script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBoqSiLUMVhLdgixKzoMGff4Dkr8YSOikM&sensor=true">
  </script>
  <script type="text/javascript">
    var map;

    function initialize() {
      var myLatlng = new google.maps.LatLng(0,0);
      var mapOptions = {
        zoom: 3,
        center: myLatlng
      }
      map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);


      $('.india').on('click', function(){
        IndiaLatLang = new google.maps.LatLng(21.0,78.0)
        placeMarker(IndiaLatLang, "This food is from India!", "http://www.greatshipglobal.com/EditorImages/image/India-icon.png")
      })

      $('.italy').on('click', function(){
        ItalyLatLang = new google.maps.LatLng(43.0,12.0)
        placeMarker(ItalyLatLang, "This food is from Italy")
      })

      $('.japan').on('click', function(){
        JapanLatLang = new google.maps.LatLng(35.0,136.0)
        placeMarker(JapanLatLang, "This food is from Japan")
      })
    }

    function placeMarker(location, message, icon) {
      var marker = new google.maps.Marker({
          position: location,
          map: map,
          animation: google.maps.Animation.DROP,
          draggable:true,
          icon: icon,
          title: message
      });

      var infowindow = new google.maps.InfoWindow({
          content: message,
          maxWidth: 300,
          maxHeight: 500
      });

      google.maps.event.addListener(marker, 'click', function() {
        infowindow.open(map,marker);
      });




      map.setCenter(location);
    }
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>

  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/css/application.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/application.js"></script>

  <title></title>
</head>
<body>
  <%= yield %>
</body>
</html>
