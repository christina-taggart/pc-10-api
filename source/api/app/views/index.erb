<div class="container">
  <h2>What are the macronutrients of</h2>
  <form action ="/foods" method="get">
    <input type="text" name="food" placeholder="milk, apple, banana...">
    <button type="submit">Search</button>
    <select name="results_number">
      <option selected="selected" value="1">1 result</option>
      <option value="5">5 results</option>
      <option value="10">10 results</option>
    </select>
  </form>

  <% if @foods %>
  <div id="search-results">
    <% @foods.each do |food| %>
      <div class="food">
        <h2><%= food.name %></h2>
        <p class="serving size">Per 100g serving, <%= food.name %> contains:</p>
        <p class="calories"><%= food.calories %> calories</p>
        <p class="carbs"><%= food.carbs %>g carbs</p>
        <p class="fat"><%= food.fat %>g fat</p>
        <p class="protein"><%= food.protein %>g protein</p>
      </div>
    <% end %>

  </div>
  <% end %>
</div>
